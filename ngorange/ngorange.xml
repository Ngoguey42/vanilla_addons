<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
			..\..\FrameXML\UI.xsd">

  <Script file="ngorange.lua"/>
  <!-- Virtual frame -->
  <Frame name="ngorangevirtual" enableMouse="false" frameStrata="HIGH" virtual="true">
    <Layers>
      <Layer frameStrata="DIALOG">
	<FontString name="$parentt" inherits="GameFontNormalLarge" maxLines = "1" SetAllPoints="true"/>
      </Layer>
    </Layers>
  </Frame>

  <!-- EnvFrames -->
  <Frame name="ngorange" frameStrata="high" enableMouse="true" movable="true" parent="UIParent">
    <!-- Scripts -->
    <Scripts>
      <OnLoad>ngorange_onload();</OnLoad>
      <OnEvent>ngorange_onevent(event, arg1, arg2);</OnEvent>
    </Scripts>
    <!-- Backdrops -->
    <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" tile="false">
    </Backdrop>
    <!-- Frames -->
    <Frames>
      <Frame name="$parentbar" enableMouse="false" frameStrata="LOW">
	<Scripts> <OnLoad>
	  local this = self;
          ngorange_setDoubleParentKey(this, this:GetParent());
          this:SetParent(UIParent);
          this:SetFrameStrata("HIGH");
	</OnLoad> </Scripts>
	<Layers>
          <Layer frameStrata="DIALOG">
            <FontString name="$parentt" inherits="GameFontNormalLarge" maxLines = "1" SetAllPoints="true"/>
          </Layer>
	</Layers>
      </Frame>

      <Frame name="$parentcursor" enableMouse="false" frameStrata="DIALOG">
	<Scripts> <OnLoad>
	  local this = self;
          ngorange_setDoubleParentKey(this, this:GetParent())
	</OnLoad> </Scripts>
	<Layers>
          <Layer frameStrata="DIALOG">
            <FontString name="$parentt" inherits="GameFontNormalLarge" maxLines = "1"/>
          </Layer>
	</Layers>
      </Frame>
    </Frames>
    <Size x="0" y="0" />
  </Frame>

</Ui>
